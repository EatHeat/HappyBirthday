<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.eatheat.happybirthday"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="tk.eatheat.happybirthday.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
            android:name="tk.eatheat.happybirthday.Bday"
            android:label="@string/app_name" >
        </activity>
		<activity
            android:name="tk.eatheat.happybirthday.Rules"
            android:label="@string/app_name" >
        </activity>
		<activity
            android:name="tk.eatheat.happybirthday.End"
            android:label="@string/app_name" >
        </activity>
	</application>

</manifest>
